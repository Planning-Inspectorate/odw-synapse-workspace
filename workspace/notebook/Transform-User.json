		"cells": [
			{
				"cell_type": "code",
				"source": [
					"from pyspark.sql import functions as F, types as T\n",
					"import uuid"
				],
				"execution_count": 2
			},
			{
				"cell_type": "code",
				"source": [
					"path = \"abfss://horizon-migration-poc@pinsstodwdevuks9h80mb.dfs.core.windows.net/MPESC-EXTRACT/Users.csv\"\n",
					"\n",
					"users_raw = (\n",
					"    spark.read.format(\"csv\")\n",
					"    .option(\"header\", \"true\")\n",
					"    .load(path)\n",
					")\n",
					""
				],
				"execution_count": 3
			},
			{
				"cell_type": "code",
				"source": [
					"users_norm = (\n",
					"    users_raw\n",
					"    .withColumn(\"coEmailAddress\", F.trim(F.col(\"coEmailAddress\")))\n",
					"    .withColumn(\"caseOfficerLogin\", F.trim(F.col(\"caseOfficerLogin\")))\n",
					"    .withColumn(\"caseOfficerId\", F.trim(F.col(\"caseOfficerId\").cast(\"string\")))\n",
					"    .withColumn(\n",
					"        \"user_key\",\n",
					"        F.lower(\n",
					"            F.coalesce(\n",
					"                F.when(F.col(\"coEmailAddress\") != \"\", F.col(\"coEmailAddress\")),\n",
					"                F.when(F.col(\"caseOfficerLogin\") != \"\", F.col(\"caseOfficerLogin\")),\n",
					"                F.col(\"caseOfficerId\")\n",
					"            )\n",
					"        )\n",
					"    )\n",
					")"
				],
				"execution_count": 4
			},
			{
				"cell_type": "code",
				"metadata": {
					"collapsed": false
				},
				"source": [
					"NAMESPACE_UUID = uuid.UUID(\"6ba7b810-9dad-11d1-80b4-00c04fd430c8\")\n",
					"\n",
					"@F.udf(returnType=T.StringType())\n",
					"def uuid5_from_key(k: str):\n",
					"    if k is None:\n",
					"        return None\n",
					"    return str(uuid.uuid5(NAMESPACE_UUID, k))\n",
					"\n",
					"users_ready = (\n",
					"    users_norm\n",
					"    .filter(F.col(\"user_key\").isNotNull())\n",
					"    .withColumn(\"id\", uuid5_from_key(F.col(\"user_key\")))\n",
					"    .withColumn(\"legacyId\", F.col(\"caseOfficerId\"))\n",
					"    .withColumn(\"idpUserId\", F.lit(None).cast(\"string\"))  # Entra GUID not available yet\n",
					"    .select(\"id\", \"idpUserId\", \"legacyId\")\n",
					"    .dropDuplicates([\"id\"])  # deterministic anyway, but keep it safe\n",
					")\n",
					"\n",
					"display(users_ready)\n",
					"print(\"rows:\", users_ready.count())"
				],
				"execution_count": 5
			},
			{
				"cell_type": "code",
				"source": [
					"transform_path = \"abfss://horizon-migration-poc@pinsstodwdevuks9h80mb.dfs.core.windows.net/MPESC-TRANSFORM/User/\"\n",
					"\n",
					"(users_ready\n",
					"    .coalesce(1)  # optional â€“ single file\n",
					"    .write\n",
					"    .mode(\"overwrite\")\n",
					"    .option(\"header\", \"true\")\n",
					"    .csv(transform_path)\n",
					")\n",
					""
				],
				"execution_count": 6
			}
		]
	}
