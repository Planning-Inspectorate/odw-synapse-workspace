				"source": [
					"## Create and seed the watermark control table for incremental ingestion\n",
					"## This table stores the LastIngestDate per source table for Horizon files"
				]
			},
			{
				"cell_type": "code",
				"metadata": {
					"microsoft": {
						"language": "sparksql"
					},
					"collapsed": false
				},
				"source": [
					"%%sql\n",
					"\n",
					"USE odw_standardised_db;\n",
					"\n",
					"-- Drop and recreate the table if it already exists (clean setup)\n",
					"DROP TABLE IF EXISTS last_ingest_dates;\n",
					"\n",
					"CREATE TABLE last_ingest_dates (\n",
					"  TableName STRING,\n",
					"  LastIngestDate TIMESTAMP\n",
					")\n",
					"USING DELTA;\n",
					"\n",
					"-- Seed with default values to ensure first incremental run pulls all data\n",
					"INSERT INTO last_ingest_dates (TableName, LastIngestDate) VALUES\n",
					"  ('Horizon_ODW_vw_DocumentMetadata', timestamp('1900-01-01 00:00:00')),\n",
					"  ('Horizon_ODW_vw_DocumentMetadataAppeals', timestamp('1900-01-01 00:00:00'));\n",
					"\n",
					""
				],
				"execution_count": null
			}
		]
